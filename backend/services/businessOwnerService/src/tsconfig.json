{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["ES6"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "resolveJsonModule": true,
    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist",  // Output should be outside of src directory
    "rootDir": "./",  // Ensure this is set to the current folder
    "baseUrl": ".",  // Relative paths to root folder
    "paths": {
      "@entities": ["src/domain/entities/*"]
    },
    "noImplicitAny": true,
    "sourceMap": true
  },
  "include": ["./**/*.ts"],  // Include all ts files under src and subfolders
  "exclude": ["node_modules"]
}
